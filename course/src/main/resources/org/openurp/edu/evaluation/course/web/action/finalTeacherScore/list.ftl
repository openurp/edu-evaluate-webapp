[#ftl]
[@b.head/]
[@b.form name="courseEvaluteStatSearchForm" action="!search" target="contentDiv"]    <table id="bar" width="100%"></table>
    <input type="hidden" name="semester.id" value="${semesterId!}">
    [@b.grid items=staffs var="staff" sortable="true"]    
        [@b.gridbar title="教师个人评教记录"]
        bar.addItem("${b.text('action.info')}", action.info());
        [/@]
        [@b.row]
            [@b.boxcol/]
            [@b.col title="教师所属部门"]${staff.state.department.name}[/@]
            [@b.col title="教师工号"]${staff.code}[/@]
            [@b.col title="教师姓名"]${staff.person.name.formatedName}[/@]
            [@b.col title="学生评教"]
             [#list finalScoreMaps  as finalScoreMap]
	            [#if finalScoreMap[0]?string == staff.id?string ]
                 ${finalScoreMap[1]!0}
                  [/#if]
	            [/#list]
            [/@]
            [@b.col title="督导评教"]        
            [#list finalScoreMaps  as finalScoreMap]
	            [#if finalScoreMap[0]?string == staff.id?string ]
                 ${finalScoreMap[2]!0}
                  [/#if]
	            [/#list]
            [/@]
            [@b.col title="院系评教"]        
            [#list finalScoreMaps  as finalScoreMap]
	            [#if finalScoreMap[0]?string == staff.id?string ]
                 ${finalScoreMap[3]!0}
                  [/#if]
	            [/#list]
            [/@]
            [@b.col title="最后得分"]        
            [#list finalScoreMaps  as finalScoreMap]
	            [#if finalScoreMap[0]?string == staff.id?string ]
                 ${finalScoreMap[4]!0}
                  [/#if]
	            [/#list]
            [/@]
            [@b.col property="rank" title="全校排名"/]
            [@b.col property="departRank" title="院系排名"/]
        [/@]
    [/@]
[/@]
[@b.foot/]